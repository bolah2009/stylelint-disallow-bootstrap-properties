{
  "name": "stylelint-disallow-bootstrap-properties",
  "version": "1.0.0",
  "description": "A stylelint plugin to disallow bootstrap css properties",
  "keywords": [
    "css-in-js",
    "css",
    "less",
    "lint",
    "linter",
    "bootstrap",
    "sass",
    "scss",
    "stylelint",
    "stylelint-plugin"
  ],
  "homepage": "https://github.com/bolah2009/stylelint-disallow-bootstrap-properties",
  "repository": "git://github.com/bolah2009/stylelint-disallow-bootstrap-properties.git",
  "license": "Apache",
  "author": "stylelint",
  "main": "index.js",
  "bin": "index.js",
  "files": [
    "disallowedProperties.js",
    "!**/__tests__"
  ],
  "scripts": {
    "format": "prettier . --write",
    "jest": "jest",
    "lint": "npm-run-all --parallel lint:*",
    "lint:formatting": "prettier . --check",
    "lint:js": "eslint . --cache --max-warnings=0",
    "lint:md": "remark . --quiet --frail",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,json,md,yml}": "prettier --write"
  },
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "extends": [
      "stylelint"
    ],
    "globals": {
      "testRule": true
    },
    "root": true
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!lib/vendor/**/*.js",
      "!lib/utils/parseCalcExpression/parser.js"
    ],
    "coverageDirectory": "./.coverage/",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "preset": "jest-preset-stylelint",
    "testEnvironment": "node",
    "testRegex": ".*/__tests__/.*\\.js$",
    "testRunner": "jest-circus/runner"
  },
  "dependencies": {
    "stylelint": "^13.9.0"
  },
  "devDependencies": {
    "@stylelint/prettier-config": "^2.0.0",
    "eslint": "^7.18.0",
    "eslint-config-stylelint": "^13.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-preset-stylelint": "^3.0.0",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
